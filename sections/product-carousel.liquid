<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Playfair+Display&display=swap" rel="stylesheet">

{%- capture flickity_options -%}
{
  "prevNextButtons": true,
  "pageDots": false,
  "contain": true,
  "cellAlign": "left",
  "groupCells": true,
  "arrowShape": {"x0": 20, "x1": 60, "y1": 40, "x2": 60, "y2": 35, "x3": 25}
}
{%- endcapture -%}

<div class="featured-collection-slider">
	{% if section.settings.title != blank %}
	<div class="section-header text-center">
	    <h2>{{ section.settings.title | escape }}</h2>
  	</div>
  	{% endif %}

  	{%- assign collection = collections[section.settings.collection] -%}
  	{%- assign product_limit = section.settings.product_count -%}

  	<div class="products-carousel js-flickity" data-flickity='{{ flickity_options }}'>
    	{% for product in collection.products limit: product_limit %}
    	<div class="carousel-card">
            <a class="products-carousel-image" href="{{ product.url | within: collection }}">
                {% if product.available and product.tags contains 'new' %}
                <div class="product-badge new"><span>New</span></div>
                {% endif %}
                {% unless product.metafields.global.featured == blank %}
                <img class="img-explore" src="{{ product.featured_image | img_url: 'master'}}"  alt="{{ product.title | escape }}">
                {% endunless %}
            </a>
            <a href="{{ product.url | within: collection }}">
                <h4>{{ product.title }}</h4>
            </a>
            <p>{{ product.description | truncate: 120 }}</p>
            <div class="card-price">
                <p>{{ product.price | money }} <span>{% if product.price <= product.compare_at_price %} {{ product.compare_at_price | money }}{% endif %}</span></p>
            </div>
            <form method="post" action="/cart/add">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
                <input type="submit" value="Add to bag" class="btn" />
            </form>
    	</div>  
    	{% endfor %}
  	</div>
</div>
    


<style>
  
    .featured-collection-slider {
      	font-family: 'Open Sans', sans-serif;
        padding-left: 24px;
        padding-right: 24px;
        margin: 128px auto;
        max-width: 1440px;
      	width: 100%;
      	box-sizing: border-box;
    }
    .featured-collection-slider a {
      	text-decoration: none;
    }
    .featured-collection-slider .products-carousel:focus {
        outline: none !important;
        box-shadow: none !important;
        border: none !important;
    }
    .featured-collection-slider .carousel-card {
        width: 330px;
        margin: 0 12px;
        display: block;
        height: auto;
    }
    .featured-collection-slider .flickity-prev-next-button {
        top: 220px;
    }
    .featured-collection-slider .carousel-card img {
        max-width: 100%;
    }
    .featured-collection-slider h2,
    .featured-collection-slider .carousel-card h4 {
        font-family: 'Playfair Display', serif;
      	line-height: 1;
    }
    .featured-collection-slider h2 {
      	font-size: 36px;
      	letter-spacing: -0.43px;
      	margin: 0 0 24px;
    }
    .featured-collection-slider .carousel-card h4 {
      	font-size: 24px;
      	letter-spacing: -0.29px;
      	margin: 24px 0 12px;
    }
    .featured-collection-slider .carousel-card p {
      	font-size: 12px;
      	line-height: 1.5;
      	letter-spacing: 0.29px;
      	margin: 12px 0;
    }
    .featured-collection-slider .carousel-card .card-price {
      	margin: 0 0 12px;
    }
    .flickity-button:disabled {
        pointer-events: all!important;
    }
    .products-carousel-image {
        display: block;
        aspect-ratio: 3/4;
        background: #eeeeee;
    }


    @media screen and (max-width: 920px) {
        .featured-collection-slider {
        }
        .featured-collection-slider .carousel-card {
        }
    }
 

    @media screen and (max-width: 767px) {
        .featured-collection-slider {
            padding-left: 12px;
            padding-right: 12px;
        }
        .featured-collection-slider .carousel-card {
            width: 300px;
        	margin: 0 6px;
        }
        .featured-collection-slider .flickity-prev-next-button {
            top: 200px;
        }
    }

</style>



<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
<script defer src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>


{% schema %}

{
    "name": "Product Carousel",
    "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Header",
          "default": "Product Carousel"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "range",
          "id": "product_count",
          "min": 4,
          "max": 12,
          "label": "Number of products to display",
          "default": 4
        }
    ],
    "presets": [
        {
          "category": "Collection",
          "name": "Product Carousel",
          "settings": {}
        }
    ]
}

{% endschema %}